<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#905"
    android:padding="15dp"
    tools:context="com.weebly.sarikcyber.recylerview.MainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="POST YOUR ADD"
        android:id="@+id/postadd"
        android:background="#00aee5"
        android:onClick="postingAdd"
        />

    <ListView
        android:layout_marginTop="15dp"
        android:layout_below="@+id/postadd"
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>

</RelativeLayout>
